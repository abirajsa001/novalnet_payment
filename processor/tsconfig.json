{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@enabler/*": ["enabler/src/*"],
      "@processor/*": ["processor/src/*"]
    }
  },
  "include": [
    "processor/src/**/*",
    "enabler/src/**/*",
    "src/**/*"
  ],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
